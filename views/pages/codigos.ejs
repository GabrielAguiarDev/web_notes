<%- include('../include/header') %>
<%- include('../include/navbar') %>

<main>
    <h1>Meus Códigos</h1>
    <i class='bx bx-code-alt'></i>
    <hr class="hrColor">
    <div class="adicionar">
        <button class="btn-add-Note">Adicionar código</button>
    </div>
    <div class="adicionarNote" id="adicionarNote">
        <form action="/codes" method="post">
            <h1>Adicionar Novo Código</h1>
            <br>
            <label for="titulo" id="labelTitulo">Título: </label>
            <input type="text" name="titulo" id="Titulo" placeholder="Titulo" class="tituloNote">
            <br>
            <label for="language">Linguagem do código</label>
            <select name="language" id="language">
                <option value="py">Python</option>
                <option value="js">JavaScript</option>
                <option value="php">PHP</option>
                <option value="c">C</option>
                <option value="c#">C#</option>
                <option value="go">GO</option>
                <option value="Java">JAVA</option>
            </select>
            <br>
            <label for="code" id="labelConteudo">Codigo: </label>
            <textarea name="code" id="Code" class="conteudoCode" placeholder="Opcional" cols="30" rows="10"></textarea>
            <br>
            <input type="submit" class="salvarEdit" value="Adicionar">
            <div class="cancelarAddNote">Cancelar</div>
        </form>
    </div>
</main>

<%- include('../include/footer') %>