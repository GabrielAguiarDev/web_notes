<%- include('./include/header') %>

<main>
    <form action="">
        <h1>Minhas Metas</h1>
        <hr>
        <div class="adicionar">
            <a class="btn" href="/criarMeta">Adicionar Meta</a>
        </div>
        <div class="posts">
            <% listMetas.forEach(meta => { %>
                <div class="cardPost">
                    <a class="btn-danger" href="/meta/delete/<%= meta.id %>"><i class='bx bx-trash'></i></a>
                    <a class="btn-edit" href="/meta/edit/<%= meta.id %>"><i class='bx bx-pencil'></i></a>
                    <span class="star">&#x2B50;</span><h4 class="tituloMeta"><%= meta.titulo %></h4>
                    <input type="hidden" name="id" value=" meta.id %>">
                    <p><%= meta.conteudo %></p>
                    <hr>
                </div>
            <% }); %>
        </div>
    </form>
</main>
