<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" type="text/css" href="css/msg/error.css">
</head>
<body>
     
    <div class="divMsgSuccess <%= msg_success != "" ? 'active' : '' %>">
        <i class='bx bx-check'></i>
        <p class="msg_success"><%= msg_success %> </p> 
    </div>

    <div class="divMsgErro <%= msg_error != "" ? 'active' : '' %>">
        <i class='bx bx-x'></i>
        <p class="msg_error" id="msgTeste"><%= msg_error %> </p>
    </div>  
    <main class="container">
        <h2>Login</h2>
        <form action="/" method="post">
            <% if(dadosEmail && dadosSenha !== "") { %>
                <div class="input-field">
                    <input type="text" name="user" id="username" placeholder="Entre com seu usuário" value="<%= dadosUsername %>" required>
                    <div class="underline">

                    </div>
                </div>
                <div class="input-field">
                    <input type="password" name="senha" id="password" placeholder="Entre com sua senha" value="<%= dadosSenha %>" required>
                    <i class='bx bx-show' id="olho"></i>
                    <div class="underline"></div>
                </div>
            <% } else { %>
                <div class="input-field">
                    <input type="text" name="user" id="username" placeholder="Entre com seu usuário" required>
                    <div class="underline">
    
                    </div>
                </div>
                <div class="input-field">
                    <input type="password" name="senha" id="password" placeholder="Entre com sua senha" required>
                    <i class='bx bx-show' id="olho"></i>
                    <div class="underline"></div>
                </div>
            <% } %>
            <input type="submit" value="Continue">
        </form>
        <footer>
            <a href="#"><span class="redefinir">Esqueceu a senha?</span></a>
            <div class="social-field">
                <a href="#">
                    <div class="social-field google">
                        <img src="https://img.icons8.com/fluency/48/000000/google-logo.png"/>
                        Entrar com o Google
                    </div>
                </a>
                <a href="#">
                    <div class="social-field facebook">
                        <i class="fab fa-facebook-f"></i>
                        Entrar com o Facebook
                    </div>
                </a>
            </div>
            <div class="hrColor"></div>
            <a href="http://127.0.0.1:3000/cadastro" id="btnCadastro">Criar nova conta</a>
            <script src="js/btn/msg.js"></script>
            <script>
                document.getElementById('olho').addEventListener('mousedown', function() {
                    document.getElementById('password').type = 'text';
                    document.getElementById('olho').style.color = "#585858";
                });

                document.getElementById('olho').addEventListener('mouseup', function() {
                    document.getElementById('password').type = 'password';
                    document.getElementById('olho').style.color = "#a09f9fa9";
                });

                // Para que o password não fique exposto apos mover a imagem.
                document.getElementById('olho').addEventListener('mousemove', function() {
                    document.getElementById('password').type = 'password';
                    document.getElementById('olho').style.color = "#a09f9fa9";
                });
            </script>
        </footer>
    </main>
</body>
</html>