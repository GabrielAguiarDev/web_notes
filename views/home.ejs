<%- include('./include/header') %>

<main>
    <form action="" method="post">
        <h1>Minhas Anotações</h1>
        <i class='bx bx-task'></i>
        <hr>
        <div class="adicionar">
            <a class="btn" href="/postagem">Adicionar anotação</a>
            <p><%= listNotes.userId %> </p>
        </div>
        <div class="posts">
            <% listNotes.forEach(note => { %>
                <div class="cardPost">
                    <a class="btn-edit" href="/note/edit/<%= note.id %>"><i class='bx bx-pencil'></i></a>
                    <a class="btn-danger" href="/note/delete/<%= note.id %>" onclick="return confirm('Deseja mesmo apagar esta Anotação?');"><i class='bx bx-trash'></i></a>
                    <h4><%= note.titulo %></h4>
                    <input type="hidden" name="id" value="<%= note.id %>">
                    <p><%= note.conteudo %></p>
                    <hr>
                </div>
            <% }); %>
        </div>
    </form>
    <br><br>

    <div class="editarNote">
        <form action="/note/edit" method="post">
            <h1>Editar Anotação</h1>
            <input type="hidden" name="id" value="<%= listNotes._id %>">
            <br>
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" id="Titulo" value="<%= listNotes.titulo %> ">
            <br>
            <label for="conteudo">Conteudo: </label>
            <input type="text" name="conteudo" id="conteudo" value="<%= listNotes.conteudo %> ">
            <br>
            <button type="submit">Salvar</button>
            <a href="/home">Cancelar</a>
        </form>
    </div>
</main>

<%- include('./include/footer') %>

</body>
</html>